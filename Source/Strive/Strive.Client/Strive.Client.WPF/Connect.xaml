<ad:DockableContent x:Class="Strive.Client.WPF.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        Title="Connect" Height="300" Width="300" xmlns:my="clr-namespace:Strive.Client.WPF">
    <StackPanel>
        <Label Content="Host"/>
        <TextBox x:Name="hostTextBox" Text="localhost"/>
        <Label Content="Port"/>
        <TextBox x:Name="portTextBox" Text="8888"/>
        <Button Content="Connect" Click="Button_Click"/>
    </StackPanel>
</ad:DockableContent>
